<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Define the base theme for day and night mode adjustments -->
    <style name="NightAdjusted.Theme.NBDream" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <!-- Define the final theme to be used in the application -->
    <style name="Theme.NBDream" parent="NightAdjusted.Theme.NBDream"/>

    <!-- Define the splash screen theme with night mode adjustments -->
    <style name="NightAdjusted.Theme.NBDream.Splash" parent="Theme.NBDream">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowBackground">@color/keyColor1</item>
    </style>

    <!-- Define the final splash screen theme -->
    <style name="Theme.NBDream.Splash" parent="NightAdjusted.Theme.NBDream.Splash">
        <item name="android:windowSplashScreenBackground" tools:targetApi="S">@color/keyColor1</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="S">@android:color/transparent</item>
        <item name="android:windowBackground">@color/keyColor1</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
